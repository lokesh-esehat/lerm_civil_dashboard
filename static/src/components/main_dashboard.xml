<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="lerm_civil_dashboard.MainDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted p-4">
            <h2 class="mb-4 text-center">LERM Civil Dashboard</h2>
            
            <!-- Date Selection Form -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <form class="form-row align-items-center">
                                <div class="col-md-5">
                                    <label for="start_date">From Date</label>
                                    <input 
                                        type="date" 
                                        class="form-control" 
                                        id="start_date" 
                                        t-model="state.start_date"
                                        t-on-change="onDateFilter"
                                    />
                                </div>
                                <div class="col-md-5">
                                    <label for="end_date">To Date</label>
                                    <input 
                                        type="date" 
                                        class="form-control" 
                                        id="end_date" 
                                        t-model="state.end_date"
                                        t-on-change="onDateFilter"
                                    />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <span t-if="state.isLoading" class="fa fa-refresh fa-spin"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Dashboard Content -->
            <div t-if="state.dateRangeSelected">
                <div t-if="state.isLoading" class="text-center">
                    <i class="fa fa-refresh fa-spin fa-3x"/>
                    <p>Loading data...</p>
                </div>
                
                <div t-elif="state.dashboardData" class="dashboard-content">
                    <!-- Your dashboard widgets go here -->
                    <div class="alert alert-info">
                        Showing data from <t t-esc="state.start_date"/> to <t t-esc="state.end_date"/>
                        <br/>
                        Total Records: <t t-esc="state.dashboardData.total_count"/>
                    </div>
                    
                    <!-- Add your actual dashboard components here -->
                </div>
                
                <div t-else="" class="alert alert-danger">
                    Failed to load dashboard data
                </div>
            </div>
            
            <div t-else="" class="alert alert-warning text-center">
                Please select a date range to view dashboard data
            </div>
        </div>
    </t>
</templates>