<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="lerm_civil_dashboard.KpiBox" owl="1">
        <div class="bg-white shadow-sm rounded text-center py-3 h-100 cursor-pointer">
            <div class="kpi-value fw-bold" style="font-size: 32px; color: #4CAF50;">
                <t t-esc="props.value"/>
            </div>
            <div class="kpi-label" style="font-size: 16px; color: #555;">
                <t t-esc="props.title"/>
            </div>
        </div>
    </t>
</templates>
